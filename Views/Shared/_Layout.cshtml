
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProductsMvc</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header>
            <h1>ProductsMvc</h1>
            <nav>
                <a href="/">Home</a>
            </nav>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - ProductsMvc</p>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
